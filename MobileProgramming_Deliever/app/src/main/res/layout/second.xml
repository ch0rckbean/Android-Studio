<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B58DE2"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:text="배달주소: 집"
            android:textStyle="bold"/>
        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="누르고 이벤트 보기"
            android:textOn="멈추기"
            android:textSize="20dp"
            android:id="@+id/BtnAd"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="#4CAF50"
            android:textColor="#ffffff"/>

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Vf">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ad2"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ad"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ad3"/>
        </ViewFlipper>
    </LinearLayout>

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1" >
   <TableRow>
<ImageView
    android:src="@drawable/chicken"
    android:id="@+id/Chick"
    android:layout_height="100dp"
    android:layout_weight="1"
    android:clickable="true"/>
       <ImageView
           android:src="@drawable/pizza"
           android:id="@+id/Pizza"
           android:layout_height="100dp"
           android:layout_weight="1"
           android:clickable="true"/>
       <ImageView
           android:src="@drawable/sushi"
           android:id="@+id/Sushi"
           android:layout_height="100dp"
           android:layout_weight="1"
           android:clickable="true" />
   </TableRow>
<TableRow>
    <Button
        android:text="치킨"
        android:layout_weight="1"
        android:id="@+id/BtnChic"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#4CAF50"/>
    <Button
        android:text="피자"
        android:layout_weight="1"
        android:id="@+id/BtnPizza"
        android:textSize="30dp"
        android:background="#ffffff"
        android:textColor="#4CAF50"/>
    <Button
        android:text="일식"
        android:layout_weight="1"
        android:id="@+id/BtnSushi"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#4CAF50"/>
</TableRow>
    <TableRow>

        <ImageView
        android:src="@drawable/chi"
        android:id="@+id/Chi"
        android:clickable="true"
        android:layout_height="100dp"
        android:layout_weight="1"/>
        <ImageView
            android:src="@drawable/dess"
            android:id="@+id/Dess"
            android:clickable="true"
            android:layout_height="100dp"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>

        <Button
            android:text="중식"
            android:layout_weight="1"
            android:id="@+id/BtnChi"
            android:textSize="30dp"
            android:background="#ffffff"
            android:textColor="#4CAF50"/>
        <Button
            android:text="디저트"
            android:layout_weight="1"
            android:id="@+id/BtnDess"
            android:textColor="#ffffff"
            android:background="#4CAF50"
            android:textSize="30dp"/>
    </TableRow>
</TableLayout>
</LinearLayout>